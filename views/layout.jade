doctype html
html(lang="en")
    head
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="description", content="University of Alabama Housing")
        title= title
        link(rel="stylesheet", href="/assets/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css")
        link(rel="stylesheet", href="/assets/css/font-icons/entypo/css/entypo.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic")
        link(rel="stylesheet", href="/assets/css/bootstrap.css")
        link(rel="stylesheet", href="/assets/css/neon-core.css")
        link(rel="stylesheet", href="/assets/css/neon-theme.css")
        link(rel="stylesheet", href="/assets/css/neon-forms.css")
        link(rel="stylesheet", href="/assets/css/custom.css")
        link(rel="stylesheet", href="/assets/css/skins/white.css")

        block stylesheets

        link(rel="stylesheet", href="/assets/js/rickshaw/rickshaw.min.css")
        link(rel="stylesheet", href="/assets/js/jvectormap/jquery-jvectormap-1.2.2.css")
        script(src="/assets/js/jquery-1.11.3.min.js")


    body(class="page-body skin-white" data-url="training.housing.ua.edu")

        div(class="page-container")

            div(class="sidebar-menu")
                div(class="sidebar-menu-inner")
                    header(class="logo-env")
                        div(class="logo")
                            a(href="/")
                                img(src="/img/logo.png", width="150", alt="")
                        div(class="sidebar-collapse")
                            a(href="#", class="sidebar-collapse-icon")
                                i(class="entypo-menu")
                        div(class="sidebar-mobile-menu visible-xs")
                            a(href="#", class="with-animation")
                                i(class="entypo-menu")

                    ul(id="main-menu", class="main-menu")
                        each link in navigation
                            li(class=classes[link.linkName])
                                a(href=link.url)
                                    if link.icon
                                        i(class=link.icon)
                                    span(class="title")= link.linkName
                                if link.subMenu
                                    ul(class=link.showSub)
                                        each subLink in link.subMenu
                                            li
                                                a(href=subLink.url)
                                                    span(class="title")= subLink.linkName

            div(class="main-content")
                div(class="row")
                    div(class="col-md-6 col-sm-8 clearfix")
                        ul(class="user-info pull-left pull-none-xsm")
                            li(class="profile-info dropdown")
                                a(href="/profile")
                                    img(src=user.image, alt="", width="44", class="img-circle")
                                    != user.firstname + " " + user.lastname
                    div(class="col-md-6 col-sm-4 clearfix hidden-xs")
                        ul(class="list-inline links-list pull-right")
                            li(class="sep")
                            li
                                a(href="/logout")
                                    != "Logout"
                                    i(class="entypo-logout right")
                hr
                block content
                footer(class="main")
                    span
                        !="&copy; 2016 &middot; The University of Alabama | Housing & Residential Communities  "
                        if footer
                            span(class="text-danger")!= "--" + footer + " Build"



    script(src="https://cdn.socket.io/socket.io-1.3.5.js")
    script(src="/assets/js/gsap/TweenMax.min.js")
    script(src="/assets/js/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js")
    script(src="/assets/js/bootstrap.js")
    script(src="/assets/js/joinable.js")
    script(src="/assets/js/resizeable.js")
    script(src="/assets/js/neon-api.js")
    script(src="/assets/js/jquery.validate.min.js")
    script(src="/assets/js/neon-login.js")

    script(src="/assets/js/jquery.sparkline.min.js")
    script(src="/assets/js/rickshaw/vendor/d3.v3.js")
    script(src="/assets/js/rickshaw/rickshaw.min.js")
    script(src="/assets/js/raphael-min.js")
    script(src="/assets/js/morris.min.js")
    script(src="/assets/js/toastr.js")
    script(src="/assets/js/neon-chat.js")

    script(src="/assets/js/neon-custom.js")

    script(src="/js/housing.js")
    block scripts
