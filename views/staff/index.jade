extends ../layout

block stylesheets
    link(rel="stylesheet" href="/assets/js/datatables/datatables.css")
    link(rel="stylesheet" href="/assets/js/select2/select2-bootstrap.css")
    link(rel="stylesheet" href="/assets/js/select2/select2.css")

block content
    ol(class="breadcrumb bc-3")
        li
            a(href="/") Home
        li
            a(href="/staff") Staff Members
        li(class="active")
            a(href="/staff") Manage Staff Members

    h2 Manage Staff
    br

    script.
        jQuery(document).ready(function() {
            var userTable = jQuery('#user-table');

            userTable.DataTable({
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true,
                "oLanguage": {
                    "sLengthMenu": "Show _MENU_",
                    "sZeroRecords": "No staff members found.",
                    "sInfo": "Showing _START_ to _END_ of _TOTAL_ total staff members.",
                    "sInfoFiltered": "",
                }
            });

            userTable.closest( '.dataTables_wrapper' ).find( 'select' ).select2( {
                minimumResultsForSearch: -1
            });
        });

    table(class="table table-bordered datatable", id="user-table")
        thead
            tr
                th(class="no-sort") Edit
                th(class="no-sort") Schedule
                th Last Name
                th First Name
                th Email
                th Position
                th Building
                th Room Number
                th Experience
        tbody
            each user in users
                tr
                    td(class="align-center")
                        a(href!="/users/edit?email=" + user.email)
                            i(class="entypo-pencil")
                    td(class="align-center")
                        a(href!="/users/schedule?email=" + user.email)
                            i(class="entypo-calendar")
                    td= user.lastname
                    td= user.firstname
                    td= user.email
                    td= user.position
                    td= user.building
                    td= user.room
                    td
                        if user.experience == 1
                            != "Returning"
                        else
                            != "New"
        tfoot
            tr
                td Edit
                td Schedule
                td Last Name
                td First Name
                td Email
                td Position
                td Building
                td Room Number
                td Experience


 block scripts
    script(src="/assets/js/datatables/datatables.js")
    script(src="/assets/js/select2/select2.min.js")
