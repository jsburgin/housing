extends empty-layout

block content
    body(class="page-body skin-white login-page login-form-fall" data-url="traning.housing.ua.edu")
        div(class="login-container")

            div(class="login-header login-caret")
                div(class="login-content")
                    a(href="/login", class="logo")
                        img(src="/img/logo.png", width="250", alt="")
                    p(class="description") Please login below.

            div(class="login-form")
                div(class="login-content")

                    div(class="form-login-error")
                        h3 Invalid Login
                        p The email address or password you've entered is incorrect. Please try again.

                    form(method="post", role="form", id="form_login")

                        div(class="form-group")
                            div(class="input-group")
                                div(class="input-group-addon")
                                    i(class="entypo-user")
                                input(type="email", class="form-control", id="email", name="email", placeholder="Email address", autocomplete="off", spellcheck="false")

                        div(class="form-group")
                            div(class="input-group")
                                div(class="input-group-addon")
                                    i(class="entypo-key")
                                input(type="password", class="form-control", id="password", name="password", placeholder="Password", autocomplete="off")

                        div(class="form-group")
                            button(type="submit", class="btn btn-primary btn-block btn-login")
                                i(class="entypo-login")
                                ="Login"



